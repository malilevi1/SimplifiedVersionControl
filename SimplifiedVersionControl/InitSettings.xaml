<Window x:Class="SimplifiedVersionControl.InitSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplifiedVersionControl"
        mc:Ignorable="d"
        Title="Choose location" Height="150" Width="400">
    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,10">
            <TextBox Name="repositoryPath" Width="250"/>
            <Button  Name="Save" Click="Save_Click">Save</Button>
        </WrapPanel>
        <Button VerticalAlignment="Bottom" x:Name="btnChoose" Click="btnChoose_Click" Content="Choose path"/>

    </DockPanel>
</Window>
